<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />

</head>
<body>
    <div class="container-md">
        <nav class="navbar bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="~/Images/logo.jpg" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                    GESTIÓN DE VEHÍCULOS
                </a>
            </div>
        </nav>
        <nav class="navbar navbar-expand-lg bg-body-tertiary" style="background-color: #e3f2fd;">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        @Html.Action("Menu", "Nav")
                    </div>
                </div>
            </div>
        </nav>

        <div class="container-fluid">
            @if (TempData["mensaje"] != null)
            {
                <div class="alert alert-success">@TempData["mensaje"]</div>
            }
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Aplicación desarrollada por <a href="https://www.linkedin.com/in/miguel-alba-aparicio-39a45499/">Miguel Alba Aparicio</a></p>
            </footer>
        </div>

