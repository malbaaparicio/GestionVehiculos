@model GestionVehiculos.WebUI.Models.ListaClientesPaginado

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">
                <div class="container">
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Nombre<span class="caret"></span>
                        </button>
                        <div class="dropdown-menu">
                            @using (Html.BeginForm("ListaClientes", "Clientes", FormMethod.Get, new { @class = "btn btn-primary" }))
                            {
                                <div class="form-group">
                                    <input type="text" name="valor" class="form-control" id="fmNombre" placeholder="Buscar" autocomplete="off"
                                           required="" oninvalid="this.setCustomValidity('Por favor, introduzca un término de búsqueda')" oninput="setCustomValidity('')">
                                    @*<input type="hidden" name="filtro" class="form-control" id="filtroMarca" value="Marca">*@
                                    @Html.Hidden("filtro", "Nombre", new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-default">Aplicar</button>
                                    @*@Html.ActionLink("Aplicar", "ListaCoches", new { valor = "Mercedes", page = 1 }, new { @class = "btn btn-default" })*@
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </th>
            <th scope="col">Apellidos
                
            </th>
            <th scope="col">NIF
                
            </th>
            <th scope="col">Teléfono
                
            </th>
            <th scope="col">Email
                
            </th>
            <th scope="col"></th>
            <th scope="col">Acciones</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model.clientes)
        {
            <tr>
                <th scope="row">@cliente.Clienteid</th>
                <td>@cliente.Nombre</td>
                <td>@cliente.Apellidos</td>
                <td>@cliente.NIF</td>
                <td>@cliente.Telefono</td>
                <td>@cliente.Email</td>
                
                <td>
                    @Html.ActionLink("Ver", "Ver", "Clientes", new { cliente.Clienteid }, new { @class = "btn btn-success far fa-eye" })

                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", "Clientes", new { cliente.Clienteid }, new { @class = "btn btn-warning fas fa-edit" })
                </td>
                <td>
                    @using (Html.BeginForm("Borrar", "Clientes", FormMethod.Post))
                    {
                        @Html.Hidden("Clienteid", cliente.Clienteid);
                        <input type="submit"
                               class="btn btn-danger far fa-trash-alt"
                               value="Borrar" />
                    }
                </td>

            </tr>
        }
    </tbody>
</table>