@model GestionVehiculos.Domain.Delegaciones

@{
    ViewBag.Title = "Edit";
}

<div class="panel">
    <div class="panel-heading">
        <h3>Editar @Model.Nombre</h3>
    </div>
    @using (Html.BeginForm("Edit", "Delegaciones", FormMethod.Post))
    {
        <div class="row g-3">
            @Html.HiddenFor(z => z.Delegacionid)
            @foreach (var property in ViewData.ModelMetadata.Properties)
            {
                if (property.PropertyName != "Delegacionid" && property.PropertyName != "ReservasEntregas" && property.PropertyName != "ReservasRecogidas")
                {
                    <div class="col-md-6">
                        <label class="form-label">@property.PropertyName</label>
                        @Html.TextBox(property.PropertyName, null, new { @class = "form-control" })
                    </div>
                }
            }
            <div class="col-12">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                @Html.ActionLink("Cancelar", "ListaDelegaciones", "Delegaciones", null, new { @class = "btn btn-secondary" })
            </div>

        </div>

    }
</div>

